<project name="deploy" default="update">
  <target name="deploy:update">
    <drush
      command="csex"
      assume="yes"
      root="${website.drupal.dir}"
      verbose="${drush.verbose}"
      uri="${multisite.uri}"
    >
      <param>overrides</param>
    </drush>
    <phingcall target="update:update" />
  </target>
</project>
