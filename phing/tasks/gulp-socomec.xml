<project name="gulp-socomec" default="gulp-socomec:install">
    <target name="gulp-socomec:install">
        <exec command="sudo ${npm.bin} install --global gulp-cli" dir="${website.drupal.dir}" passthru="true"/>
        <exec command="rm -rf node_modules/node-sass" dir="${website.drupal.dir}" passthru="true"/>
        <exec command="sudo ${npm.bin} install --no-bin-link" dir="${website.drupal.dir}" passthru="true"/>
    </target>

    <target name="gulp-socomec:css">
        <exec command="gulp styles" dir="${website.drupal.dir}" passthru="true"/>
    </target>
</project>
