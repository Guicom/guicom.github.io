<project name="multisite" default="generate-site">

  <target name="multisite:generate-site">
    <propertyprompt propertyName="multisite.new.locale" promptText="Locale of the site to create." defaultValue="fr" />
    <propertyprompt propertyName="multisite.new.country" promptText="Country of the site to create." defaultValue="France" />
    <propertyprompt propertyName="multisite.new.human_name" promptText="Name of the site to create." defaultValue="Socomec ${multisite.new.country}" />
    <propertyprompt propertyName="multisite.new.machine_name" promptText="Machine name of the site to create." defaultValue="socomec_${multisite.new.locale}" />
    <propertyprompt propertyName="multisite.new.uri" promptText="URI of the site to create." defaultValue="socomec.${multisite.new.locale}.loc" />
    <propertyprompt propertyName="multisite.new.alias" promptText="Name of the alias to create." defaultValue="${multisite.new.locale}" />
    <propertyprompt propertyName="multisite.new.db_created" promptText="Please confirm that a database named ${multisite.new.machine_name} exists (yes/no)"  defaultValue="yes" />
    <if>
      <equals arg1="${multisite.new.db_created}" arg2="yes" />
      <then>
        <phingcall target="multisite:prepare-site" />
        <phingcall target="multisite:install-site" />
        <phingcall target="multisite:import-config" />
        <phingcall target="multisite:create-site-alias" />
        <phingcall target="multisite:create-config-split" />
        <phingcall target="multisite:create-child-theme" />
      </then>
    </if>
  </target>

  <target name="multisite:prepare-site">
    <if>
      <not>
        <isset property="multisite.new.locale" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.locale" promptText="Locale of the site to create." defaultValue="fr" />
      </then>
    </if>
    <if>
      <not>
        <isset property="multisite.new.machine_name" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.machine_name" promptText="Machine name of the site to create." defaultValue="socomec_${multisite.new.locale}" />
      </then>
    </if>
    <if>
      <not>
        <isset property="multisite.new.uri" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.uri" promptText="URI of the site to create." defaultValue="socomec.${multisite.new.locale}.loc" />
      </then>
    </if>
    <drush
      command="soc_multisite:generate_site"
      assume="yes"
      root="${website.drupal.dir}"
      verbose="${drush.verbose}"
    >
      <param>${multisite.new.machine_name}</param>
      <param>${multisite.new.uri}</param>
    </drush>
  </target>

  <target name="multisite:install-site">
    <if>
      <not>
        <isset property="multisite.new.locale" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.locale" promptText="Locale of the site to create." defaultValue="fr" />
      </then>
    </if>
    <if>
      <not>
        <isset property="multisite.new.uri" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.uri" promptText="URI of the site to create." defaultValue="socomec.${multisite.new.locale}.loc" />
      </then>
    </if>
    <if>
      <not>
        <isset property="multisite.new.human_name" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.country" promptText="Country of the site to create." defaultValue="France" />
        <propertyprompt propertyName="multisite.new.human_name" promptText="Name of the site to create." defaultValue="Socomec ${multisite.new.country}" />
      </then>
    </if>
    <propertyprompt propertyName="multisite.new.db_created" promptText="Please confirm that a database named ${multisite.new.machine_name} exists (yes/no)"  defaultValue="yes" />
    <if>
      <equals arg1="${multisite.new.db_created}" arg2="yes" />
      <then>
        <drush
          command="site:install"
          assume="yes"
          root="${website.drupal.dir}"
          verbose="${drush.verbose}"
        >
          <param>standard</param>
          <param>force</param>
          <param>no-interaction</param>
          <option name="uri">${multisite.new.uri}</option>
          <option name="site-name">${multisite.new.human_name}</option>
          <option name="locale">${multisite.new.locale}</option>
        </drush>
      </then>
    </if>
  </target>

  <target name="multisite:import-config">
    <if>
      <not>
        <isset property="multisite.new.uri" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.locale" promptText="Locale of the site to create." defaultValue="fr" />
        <propertyprompt propertyName="multisite.new.uri" promptText="URI of the site to create." defaultValue="socomec.${multisite.new.locale}.loc" />
      </then>
    </if>
    <exec command="${drupal.bin} entity:delete shortcut_set default --uri=${multisite.new.uri}" dir="${project.basedir}/web" passthru="true" />
    <drush
      command="pm-uninstall"
      assume="yes"
      root="${website.drupal.dir}"
      bin="${drush.bin}"
      verbose="${drush.verbose}"
      uri="${multisite.new.uri}"
    >
      <param>shortcut</param>
    </drush>
    <drush
      command="config-set"
      assume="yes"
      root="${website.drupal.dir}"
      bin="${drush.bin}"
      verbose="${drush.verbose}"
      uri="${multisite.new.uri}"
    >
      <param>"system.site"</param>
      <param>"uuid"</param>
      <param>0af06ffc-9b65-4d85-9658-4120d6f51796</param>
    </drush>
    <!--<phingcall target="multisite-language:sync-lang-uuid" />-->
    <drush
      command="config:import"
      assume="yes"
      root="${website.drupal.dir}"
      verbose="${drush.verbose}"
    >
      <option name="uri">${multisite.new.uri}</option>
      <option name="source">/var/www/html/config/drupal/sync</option>
    </drush>
  </target>

  <target name="multisite:create-site-alias">
    <if>
      <not>
        <isset property="multisite.new.locale" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.locale" promptText="Locale of the site to create." defaultValue="fr" />
      </then>
    </if>
    <if>
      <not>
        <isset property="multisite.new.alias" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.alias" promptText="Name of the alias to create." defaultValue="${multisite.new.locale}" />
      </then>
    </if>
    <if>
      <available file="${project.basedir}/drush/sites/com.site.yml"
        property="multisite.default_drush_alias" />
      <then>
        <copy file="${project.basedir}/drush/sites/com.site.yml"
          tofile="${project.basedir}/drush/sites/${multisite.new.alias}.site.yml" />
      </then>
    </if>
    <if>
      <available file="${project.basedir}/drush/sites/${multisite.new.alias}.site.yml"
        property="multisite.${multisite.new.locale}_drush_alias" />
      <then>
        <replaceregexp
          file="${project.basedir}/drush/sites/${multisite.new.alias}.site.yml"
          match="\.com"
          replace=".${multisite.new.alias}"
        />
      </then>
    </if>
  </target>

  <target name="multisite:create-config-split">
    <if>
      <not>
        <isset property="multisite.new.locale" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.locale" promptText="Locale of the site to create." defaultValue="fr" />
      </then>
    </if>
    <if>
      <not>
        <isset property="multisite.new.machine_name" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.machine_name" promptText="Machine name of the site to create." defaultValue="socomec_${multisite.new.locale}" />
      </then>
    </if>
    <drush
      command="soc_multisite:generate_config_split"
      assume="yes"
      root="${website.drupal.dir}"
      verbose="${drush.verbose}"
    >
      <param>${multisite.new.machine_name}</param>
    </drush>
  </target>

  <target name="multisite:create-child-theme">
    <if>
      <not>
        <isset property="multisite.new.locale" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.locale" promptText="Locale of the theme to create." defaultValue="fr" />
      </then>
    </if>
    <if>
      <not>
        <isset property="multisite.new.machine_name" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.machine_name" promptText="Machine name of the theme to create." defaultValue="socomec_${multisite.new.locale}" />
      </then>
    </if>
    <if>
      <not>
        <isset property="multisite.new.uri" />
      </not>
      <then>
        <propertyprompt propertyName="multisite.new.uri" promptText="URI of the site where theme will be activated." defaultValue="socomec.${multisite.new.locale}.loc" />
      </then>
    </if>
    <mkdir dir="${website.drupal.dir}/themes/custom/${multisite.new.machine_name}" />
    <if>
      <available file="${website.drupal.dir}/themes/custom/socomec/socomec.info.yml"
                 property="multisite.new.theme_info" />
      <then>
        <copy file="${website.drupal.dir}/themes/custom/socomec/socomec.info.yml"
              tofile="${website.drupal.dir}/themes/custom/${multisite.new.machine_name}/${multisite.new.machine_name}.info.yml" />
      </then>
    </if>
    <if>
      <available file="${website.drupal.dir}/themes/custom/${multisite.new.machine_name}/${multisite.new.machine_name}.info.yml"
                 property="multisite.${multisite.new.locale}_theme_info" />
      <then>
        <replaceregexp
          file="${website.drupal.dir}/themes/custom/${multisite.new.machine_name}/${multisite.new.machine_name}.info.yml"
          match="bootstrap_barrio"
          replace="socomec"
        />
        <replaceregexp
          file="${website.drupal.dir}/themes/custom/${multisite.new.machine_name}/${multisite.new.machine_name}.info.yml"
          match="socomec"
          replace="${multisite.new.machine_name}"
        />
        <drush
          command="theme:enable"
          assume="yes"
          root="${website.drupal.dir}"
          verbose="${drush.verbose}"
          uri="${multisite.new.uri}"
        >
          <param>${multisite.new.machine_name}</param>
        </drush>
        <drush
          command="cr"
          assume="yes"
          root="${website.drupal.dir}"
          verbose="${drush.verbose}"
          uri="${multisite.new.uri}"
        >
        </drush>
        <drush
          command="config:set"
          assume="yes"
          root="${website.drupal.dir}"
          verbose="${drush.verbose}"
          uri="${multisite.new.uri}"
        >
          <param>system.theme</param>
          <param>default</param>
          <param>${multiste.new.machine_name}</param>
        </drush>
      </then>
    </if>
  </target>

</project>
