<?php

/**
 * @file
 * Contains soc_traceparts.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_theme().
 */
function soc_traceparts_theme($existing, $type, $theme, $path) {
  return [
    'soc_traceparts_download_block' => [
      'variables' => [
        'label' => t('Download 3D model'),
        'formats' => [],
      ],
      'template' => 'traceparts-download-block',
    ],
    'soc_traceparts_download_page' => [
      'variables' => [
        'title' => NULL,
        'button_label' => NULL,
        'download_url' => NULL,
      ],
      'template' => 'traceparts-download-page',
    ],
    'soc_traceparts_download_link' => [
      'variables' => [
        'button_label' => NULL,
        'download_url' => NULL,
      ],
      'template' => 'traceparts-download-link',
    ],
  ];
}

/**
 * Implements hook_help().
 */
function soc_traceparts_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the soc_traceparts module.
    case 'help.page.soc_traceparts':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Traceparts API interface') . '</p>';
      return $output;

    default:
  }
}
