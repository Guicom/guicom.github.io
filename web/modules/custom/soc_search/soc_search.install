/**
 * @file
 * Update scripts for the soc_search module.
 */

/**
 * Implements hook_install().
 */
function soc_search_install() {
  module_load_include('module', 'soc_search', 'soc_search');

  \Drupal::configFactory()
    ->getEditable('soc_search.settings')
    ->set('title', 'Search')->save()
    ->set('title_searched', '@total results for "@word"')->save()
    ->set('title_no_result', 'No result')->save()
    ->set('breadcrumb_title', 'Search')->save()
    ->set('breadcrumb_title_searched', 'Search results for "@word"')->save()
	  ->set('placeholder', 'Search a reference, an advice, etc.')->save()
    ->set('top_search_number', 5)->save()
    ->set('quick_links_number', 5)->save();
}

