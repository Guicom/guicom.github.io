{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div class="col-sm-12 text-right">
        <div class="infoblock">
          <div class="avatar">
            {{ content.field_image_1 }}
          </div>
          <div class="infotext text-left">
            <div class="client-thierry-osw">{{ content.field_nom }}</div>
            <div class="ingenieur-electricie">
              <div>{{ content.field_position }}</div>
              <div>{{ content.field_company }}</div>
            </div>
          </div>
          <div class="clipped">
            {{ content.field_image_2 }}
          </div>
        </div>
      </div>
      <div class="col-sm-12 infodescription text-right">
        <div class="infos-ou-quote">
          {{ content.field_text_simple }}
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
