<div class="hero-block">
  <div class="container">
    <div class="row">
      <div class="product-reference-image col-lg-5 col-md-12">
      </div>
      <div class="product-reference-info col-lg-7 col-md-12">
        <h1 class="product-reference-title">
          {{ drupal_field('title', 'node') }}
        </h1>
        <div class="product-reference-ref">{{ drupal_field('field_reference_ref', 'node') }}</div>
        <div class="product-reference-teaser">{{ drupal_field('field_teaser', 'node') }}</div>
      </div>
    </div>
    <aside class="product-reference-cta-wrapper">
      {% if drupal_field('field_product_cta_1', 'node')|render|striptags|trim is not empty %}
        <div class="cta-simple">
          {{ drupal_field('field_product_cta_1', 'node') }}
        </div>
      {% endif %}
      {% if drupal_field('field_product_cta_2', 'node')|render|striptags|trim is not empty %}
        <div class="cta-simple">
          {{ drupal_field('field_product_cta_2', 'node') }}
        </div>
      {% endif %}
      {% if drupal_field('field_product_cta_3', 'node')|render|striptags|trim is not empty %}
        <div class="cta-blue">
          {{ drupal_field('field_product_cta_3', 'node')|render|striptags|trim }}
        </div>
      {% endif %}
      {% if drupal_field('field_product_cta_4', 'node')|render|striptags|trim is not empty %}
        <div class="cta-yellow">
          {{ drupal_field('field_product_cta_4', 'node') }}
        </div>
      {% endif %}
    </aside>
  </div>
</div>
